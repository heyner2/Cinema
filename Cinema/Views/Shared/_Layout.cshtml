<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cinema</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/fontawesome-free-5.15.3-web/css/all.css" rel="stylesheet" />
</head>
<body>
    <header  style="margin-bottom: 50px !important; height: 20px !important">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-info border-bottom shadow-lg mb-lg-5 fixed-top">
            <div class="container">
                <a style="color: black" class="navbar-brand home-icon" asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-film fa-4x"></i> </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">                     
                        <li class="nav-item">
                            <a class="nav-link text-dark display-4 font-weight-bold" asp-area="" asp-controller="Home" asp-action="Privacy"><p>Peliculas </p></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark display-4 font-weight-bold" asp-area="" asp-controller="Home" asp-action="Privacy"><p>Reservas</p></a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <br />
    <br />
    <div style="margin-bottom: 100px; margin-top: 20px" class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <br />
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Cinema - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
        <div class="container">
            &copy; 2021 - Cinema - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>       
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
